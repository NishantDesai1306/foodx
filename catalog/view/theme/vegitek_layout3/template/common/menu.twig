<div class="header-main-menu">
<nav class="nav-container" role="navigation">
<div class="nav-inner">

{% if categories %}
<div id="menu" class="header-main-menu">
<div class="nav-responsive"><span>Menu</span><div class="expandable"></div></div>
 
      <ul class="nav navbar-nav">
	  	<li class="home menu-category"><a class="a-top-link" href="{{ home }}">{{ name }}</a></li>

    	{% for category in categories %}
        {% if category.children %}
			<li class="menu_item dropdown"><a class="a-top-link" href="{{ category.href }}">{{ category.name }} <i class="fa fa-angle-down"></i></a>
				<div class="dropdown-menu megamenu column{{ category.column }}">
				<div class="dropdown-inner">
				  {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
					<ul class="list-unstyled childs_1">
					{% for child in children %}
						{% if child.childs %}
						  <li class="dropdown"><a href="{{ child.href }}">{{ child.name }}</a>
							  <div class="dropdown-menu">
							  <div class="dropdown-inner">
							  {% for childs_col in child.childs|batch(child.childs|length / child.column|round(1, 'ceil')) %}
								<ul class="list-unstyled childs_2">
								  {% for childs_2 in childs_col %}
									<li><a href="{{ childs_2.href }}">{{ childs_2.name }}</a></li>
								  {% endfor %} 
								</ul>
							  {% endfor %}
							  </div>
							  </div>
						  </li>
						{% else %}
						  <li><a href="{{ child.href }}">{{ child.name }}</a></li>
						{% endif %}
					{% endfor %}
					</ul>
					
				  {% endfor %}
				</div>
				{% if thumb %}
				<div class="menucategory-image">
				  <a class="a-top-link" href="{{ category.href }}"><img src="image/{{ category.rsimage }}" /></a>
				</div>
				{% endif %}
				</div>
			</li>
			
        {% else %}
			<li class="menu_item"><a class="a-top-link" href="{{ category.href }}">{{ category.name }}</a></li>
       {% endif %}
        {% endfor %}
        
		 	{#<li class="first menu-category"><a class="a-top-link" href="{{ affiliate }}">{{ txt_affiliate }}</a></li>
             <li class="menu-category"><a class="a-top-link" href="{{ voucher }}">{{ txt_voucher }}</a></li>
            <li class="menu-category"><a class="a-top-link" href="{{ manufacturer }}">{{ txt_manufacturer }}</a></li> 
			 <li class="menu-category"><a class="a-top-link" href="{{ return }}">{{ txt_return }}</a></li> 
			        
            <li class="menu-category"><a class="a-top-link" href="{{ sitemap }}">{{ txt_sitemap }}</a></li>#}
			<li class="menu-category"><a class="a-top-link" href="{{ aboutus }}">{{ txt_aboutus }}</a></li>
            <li class="menu-category"><a class="a-top-link" href="{{ contact }}">{{ txt_contact }}</a></li> 
			<li class="last menu-category"> <a class="a-top-link" href="{{ all_blogs }}">{{ text_blog }}</a></li>
  </ul>
  
</div>
{% endif %}

</div>

</nav> 

</div>
</nav>   